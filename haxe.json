{
  "build" : {
    "-D" : ["no-deprecation-warnings","STX_TEST__VERBOSE=true"],
    "-lib" : [
      "hscript",
      "tink_typecrawler",
      "stx_pico","stx_show","stx_nano","stx_om","stx_bake","stx_show","fletcher","stx_makro","stx_coroutine","stx_makro","pml","halva"
    ],
    "-cp"  : "src/main/haxe",
    "unit" : {
      "--macro" : [
        "include('stx.schema',true)",
        "include('stx.assert',true)"
      ]
    },
    "type_to_schema" : {
      "-main" : "stx.schema.makro.TypeToSchema",
      "--interp" : true
    },
    "test" : {
      "-main" : "stx.schema.Test",
      "interp" : {
        "--interp" : true
      },
      "node" : {
        "--macro" : ["allowPackage('sys')"],
        "-lib" : ["hxnodejs"],
        "--js" : ".stx/build/test/node/main.js"
      },
      "makro" : {
        "-D" : ["boot"],
        "--interp" : true
      },
      "munge" : {
        "-main" : "stx.schema.test.MungeTest",
        "--interp" : true
      }
    }
  },
  "run" : {
    "test.node:run" : [
      ["node",".stx/build/test/node/main.js"]
    ]
  }
}